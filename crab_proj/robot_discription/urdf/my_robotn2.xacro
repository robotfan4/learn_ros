<?xml version="1.0"?>
<robot xmlns:xacro="http://ros.org/wiki/xacro" name="crab">

<!-- Build the body frame -->





	<link name="base_link" />
	<joint name="foot_tip_test" type="fixed">
		<parent link="base_link" />
		<child link="foot_tip_test" />
		<origin xyz="0 0 0" rpy="0 0 0" />
	</joint>	
	<link name="foot_tip_test" >
		<visual>
      			<origin	xyz="250 0 -120" rpy="0 0 0" />
      			<geometry>
				<cylinder length="10" radius="10"/>
      			</geometry>
     			<material name="grey">
        			<color rgba="0.5 0.5 0.5 1" />
      			</material>
    		</visual>
	</link>
	<joint name="base_joint" type="fixed">
		<parent link="base_link" />
		<child link="thorax" />
		<origin xyz="0 0 0" rpy="0 0 0" />
	</joint>			


	<link name="thorax">
    		<visual>
      			<origin	xyz="0 0 0" rpy="0 0 0" />
      			<geometry>
				<cylinder length="10" radius="100"/>
      			</geometry>
     			<material name="grey">
        			<color rgba="0.5 0.5 0.5 1" />
      			</material>
    		</visual>
	</link>

<!-- Pi parameter -->
	<xacro:property name="pi" value="3.1415926535897931" />

<!-- Joint properties -->
	<xacro:property name="joint_lower_limit" value="-${1.9}" />
	<xacro:property name="joint_upper_limit" value="${2.5}" />
	<xacro:property name="joint_effort" value="10000" />
	<xacro:property name="joint_velocity" value="100" />

<!-- Leg macros -->
	<xacro:macro name="leg" params="side num x y angle">

<!-- Build leg -->
  	<joint name="leg_center_joint_${side}${num}" type="fixed">
    		<origin xyz="${x} ${y} 0" rpy="0 0 0" /> 
    		<parent link="thorax" />
    		<child link="leg_center_${side}${num}" />
  	</joint>

    	<link name="leg_center_${side}${num}" />


	<joint name="coxa_joint_${side}${num}" type="revolute">
    		<origin xyz="0 0 0" rpy="0 0 ${angle}" />
    		<parent link="leg_center_${side}${num}" />
    		<child link="coxa_${side}${num}" />
    		<axis xyz="0 0 1" />
    		<limit lower="${joint_lower_limit}" upper="${joint_upper_limit}" effort="${joint_effort}" velocity="${joint_velocity}" />
  	</joint>

<!-- link: coxal1-->



  	<link name="coxa_${side}${num}">
    		<visual>
      			<origin xyz="25 0 0" rpy="0 ${pi/2} 0" />
      			<geometry>
        			<cylinder length="50" radius="10"/>
      			</geometry>
      			<material name="">
        			<color rgba="0.7 0.7 0 1" />
      			</material>
    		</visual>
  	</link>

  	<joint name="femur_joint_${side}${num}" type="revolute">
    		<origin xyz="50 0 0" rpy="-${pi/2} 0 0" />
    		<parent link="coxa_${side}${num}" />
    		<child link="femur_${side}${num}" />
    		<axis xyz="0 0 -1" />
    		<limit lower="${joint_lower_limit}" upper="${joint_upper_limit}" effort="${joint_effort}" velocity="${joint_velocity}" />
  	</joint>



  	<link name="femur_${side}${num}">
    		<visual>
      			<origin xyz="40 0 0" rpy="0 ${pi/2} 0" />
      			<geometry>
        			<cylinder length="80" radius="10"/>
      			</geometry>
      			<material name="">
        			<color rgba="0 0.7 0.7 1" />
      			</material>
    		</visual>
  	</link>

  	<joint name="tibia_joint_${side}${num}" type="revolute">
    		<origin xyz="80 0 0" rpy="${pi} 0 ${pi/2}" />
    		<parent link="femur_${side}${num}" />
    		<child link="tibia_${side}${num}" />
    		<axis xyz="0 0 1" />
    		<limit lower="${joint_lower_limit}" upper="${joint_upper_limit}" effort="${joint_effort}" velocity="${joint_velocity}" />
  	</joint>


  	<link name="tibia_${side}${num}">
    		<visual>
      			<origin xyz="90 0 0" rpy="0 ${pi/2} 0" />
      			<geometry>
       				 <cylinder length="180" radius="10"/>
      			</geometry>
      			<material name="">
        			<color rgba="0.7 0 0.7 1" />
      			</material>
    		</visual>
  	</link>

  	<joint name="tibia_foot_joint_${side}${num}" type="fixed">
    		<origin xyz="180 0 0" rpy="0 0 0" />
    		<parent link="tibia_${side}${num}" />
    		<child link="tibia_foot_${side}${num}" />
  	</joint>

  	<link name="tibia_foot_${side}${num}" />
	</xacro:macro>

<!-- Build robot model -->
	<xacro:leg side="r" num="1" x="100" y="0" 	angle="${0}" />
	<xacro:leg side="r" num="2" x="50" y="-86.60"	angle="-${pi/3}" />
	<xacro:leg side="r" num="3" x="-50" y="-86.60"	angle="-${pi*2/3}" />
	<xacro:leg side="l" num="1" x="-100" y="0"	angle="${pi}" />
	<xacro:leg side="l" num="2" x="-50" y="86.60"  angle="${pi*2/3}" />
	<xacro:leg side="l" num="3" x="50" y="86.60" 	angle="${pi/3}" />

  
</robot>
